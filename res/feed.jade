doctype xml
feed(xmlns='http://www.w3.org/2005/Atom')
  title(type='text') #{title}
  //subtitle(type='text')
  updated #{date}
  //published #{createdAt}
  id #{id}
  link(rel='alternate' type='text/html' hreflang='ja' href='#{root}/article/all.html')
  link(rel='self' type='application/atom+xml' href='http://sineli.ttic.press/#{root}/#{path}')
  rights #{rights}
  generator(uri='https://github.com/katastemattic/contenttic' version='1.0.0-alpha.snapshot') Contenttic
  - each content in contents
    entry
      title #{content.title}
      link(rel='alternate' type='text/html' href='#{root}/#{content.permalink}')
      id #{content.id}
      updated #{content.updatedAt}
      published #{content.createdAt}
      author
        name #{content.author}
      content(type='xhtml' xml:lang='ja')
        div(xmlns='http://www.w3.org/1999/xhtml') !{content.body}

