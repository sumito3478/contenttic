.notes
  background-color #e0dedd
  border 1px solid #888888
  font-size 12px
figure img
  border 1px solid #888888
figcaption
  background-color #e0dedd
  border 1px solid #888888
  display inline-block
  font-size 12px
[lang="la"]
  font-size 24px
  line-height 24px
  font-family "EB Garamond"
.metadata
  & dd p
    padding 0
    margin 0
#site-navs
  margin 0
  padding 0
  & nav
    background linear-gradient(top, #888888, #ccccdc)
    margin 0
    padding 0
    float: left
    width 150px
    overflow scroll-y
    & ul
      margin 0
      padding 0
      list-style-type none
 dt
   font-weight bold
   padding-right 10px
   float left
   clear both
.treeview
  &
  & *
    padding 0
    margin 0
    vertical-align middle
    list-style none
  & label
    &[for]::before
    & span::before
      content: "▶"
      display inline-block
      margin 2px 0 0
      width 13px
      height 13px
      vertical-align top
      text-align center
      color #888888
      font-size 8px
      line-height 13px
      cursor pointer
    &[for]::before
      transform(-24px)
    &:not([for])
      margin 0 8px 0 0
  & li
    user-select(none)
    & ul
      margin 0 0 0 22px
  & input[type="checkbox"][id]
    &:checked ~ label[for]::before
      content "▼"
    &:not(:checked) ~ ul
      display none
