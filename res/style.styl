@import 'nib'

html
body
  height 100%
a
a:link
a:visited
a:hover
a:active
  color: #333
site-header-height = 40px
font-size-base = 12
px(x)
  unquote("" + x + "px")
button-gradient()
  box-shadow inset 0 0 0px 1px rgba(255,255,255,.5) , 0 1px 2px 0px rgba(0,0,0,.6)
  background linear-gradient(bottom, #CFCCC9 0%,#e0dedd 75%)
  border none
body
  text-rendering optimizeLegibility
  font-family "07LogoTypeGothic7", "Noto Sans Japanese", "Source Han Sans", sans-serif, Symbola
  button-gradient()
  background-attachment fixed
  color #333
  font-size font-size-base
  line-height 1.6
  margin 0
  padding site-header-height 0 0 0
  overflow hiden
  word-wrap break-word
  counter-reset section-counter-1
  position relative
#site-aside
  position fixed
  z-index 1000
  top 0
  left 0
  width 100%
  height site-header-height
  background-color rgb(240, 240, 240)
  font-size 32px
#site-menu-check
  display none
::-webkit-scrollbar
  -webkit-appearance none
  width 7px
::-webkit-scrollbar-thumb
  button-gradient()
  //border-radius 4px
  //background-color: rgba(0,0,0,.5);
  box-shadow inset 0 0 0px 1px rgba(255,255,255,.5) , 0 1px 2px 0px rgba(0,0,0,.6)
  border-radius 4px
::-webkit-scrollbar-track-piece
  background-color #888888
  border-radius 4px
#site-menu-content
  z-index 2000
  max-width 600px
  min-width 300px
  overflow-x auto
  overflow-y scroll
  height 90%
  background-color #f8f8f8
  margin 0
  padding 0
  position fixed
  top 40px
  left 0
  background-color #CFCCC9
  button-gradient()
  & a
  & a:link
  & a:visited
  & a:hover
  & a:active
    box-shadow inset 0 0 0px 1px rgba(255,255,255,.5) , 0 1px 2px 0px rgba(0,0,0,.6)
    background transparent
    border none
    color #333
    text-decoration none
    font-size px(font-size-base + 4 * 2)
    display block
    border-bottom 1px solid black
  display none
  & a
    & h1
      text-transform uppercase
      margin 0
      margin-left 10px
      padding 0
    & p
      margin 0
      margin-left 20px
      padding 0
#site-menu-check:checked~#site-menu-content
  display block
#site-header
  font-family "EB Garamond"
  font-size px(font-size-base + 2 * 2)
  font-height 1
  font-style normal
  & h1
    text-align center
    margin 0 0 0 0
    padding 0 0 0 0
  & a
  & a:link
  & a:visited
  & a:hover
  & a:active
    color #333
    text-decoration none
  & label
    cursor pointer
    z-index 1050
    // top 0
    // left 0
    background-color #e0dedd
    font-size px(font-size-base + 2 * 2)
    float left
    font-family "EB Garamond"
    // min-width:120px;
    // min-height:20px;
    margin 0
    color: rgb(27,25,24);
    border-radius: 4px;
    padding: 0 1em;
    box-shadow: inset 0 0 0px 1px rgba(255,255,255,.5) , 0 1px 2px 0px rgba(0,0,0,.6);
    background linear-gradient(bottom, #CFCCC9 0%,#e0dedd 75%)
    border:none;
    position absolute
    bottom 0
    left 0
@media screen and (min-width: 1000px)
  body
    padding site-header-height * 2 0 0 0
  #site-aside
    height site-header-height * 2
  #site-menu-content
    height 90%
    background-color #f8f8f8
    margin 0
    padding 0
    position fixed
    top 80px
    left 0
  #site-header
    text-align center
    font-family "EB Garamond"
    font-size px(font-size-base + 12 * 2)
    & label
      font-family "EB Garamond"
      font-size px(font-size-base + 6 * 2)
#document-root
  min-height 100%
  width 100%
  border 4px solid  #f8f8f8
  background-color #ffffff
  border-radius 8px
  margin 0 0 0 0
  padding 0 0 0 0
  button-gradient()
  background-attachment fixed
  & #document-content
    margin 10px 10px 10px 10px
    padding 0
    background-color #eeeeee
    border 4px solid #888888
    border-radius 4px
    & header
      margin 0
      padding 0
      padding-bottom 20px
      & h1
        margin 0
        padding 0
        border-bottom 4px solid #888888
        background-color #cccccc
  count(i)
    buf = ''
    for j, index in 1..i
      if index
        buf += ') "." counter(section-counter-' + j
      else
        buf += 'counter(section-counter-' + j
    buf += ') ". "'
  for i in 1..6
    h{i}
      font-size px(font-size-base + (6 - i) * 2)
      // counter-reset unquote('section-counter-' + (i + 1))
      // &:before
      //   content unquote(count(i))
      //   counter-increment unquote('section-counter-' + i)
  code
  tt
    margin 0 2px
    padding 0 5px
    white-space nowrap
    border 1px solid #eaeaea
    background-color #ffffff
    border-radius 3px
  pre
    margin 0
    padding 0
    code
      white-space pre
    border none
    overflow-x scroll
    -webkit-overflow-scrolling touch
    background transparent
  .highlight pre
    background-color #f8f8f8
    border 1px solid #cccccc
    font-size 16px
    line-height 18px
    overflow auto
    padding 6px 10px
    border-radius 3px
  pre
    overflow-x scroll
    &.text
    &.translation
      & code
        white-space pre
    &[lang="la"]
      & code
        font-size 20px
        font-family "EB Garamond"
    background-color #ffffff
    border 4px solid #888888
    font-size 16px
    line-height 24px
    overflow auto
    padding 6px 10px
    border-radius 10px
    & code
    & tt
      background transparent
      border none
@media screen and (max-width: 1000px)
  pre code
    min-width 300%
.text
.translation
  white-space pre
  background-color #e0dedd
  border 1px solid #888888
  font-size 16px
  overflow auto
  margin 5px
  padding 10px
  border-radius 1px
  counter-reset ln
  box-shadow inset 0 0 0px 1px rgba(255,255,255,.5) , 0 1px 2px 0px rgba(0,0,0,.6)
  background-color rgb(240, 240, 240)
  //background linear-gradient(bottom, #CFCCC9 0%,#e0dedd 75%)
  border none
  //button-gradient()
  & p
    padding 0
    margin 0
    &:before
      counter-increment ln
      content counter(ln) ". "
      padding-right 10px
